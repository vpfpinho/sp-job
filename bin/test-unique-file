require 'bundler/setup'
require 'sp/job'
require 'sp/job/lock'
require 'sp/job/unique_file'
require 'sp/job/common'
require 'syslog/logger'
require 'date'

extend SP::Job::Common

puts "UniqueFile Test for #{RUBY_PLATFORM}"

(1..3).each do | n |
  tmp = get_unique_file(name: "guf_#{n}", extension: 'test')
  puts "%-15s: %3d: %s" % ['get_unique_file', n, tmp]
end

(4..6).each do | n |
  tmp = get_unique_file(tmp_dir: '/tmp/', name: "guf_#{n}", extension: 'test')
  puts "%-15s: %3d: %s" % ['get_unique_file', n, tmp]
end

(7..9).each do | n |
  tmp = SP::Job::Unique::File.create("/tmp/#{(Date.today + 2).to_s}", ".html")
  puts "%-15s: %3d: %s" % ['create', n, tmp]
end

(10..12).each do | n |
  tmp = SP::Job::Unique::File.create_n(folder: "/tmp/#{(Date.today + 2).to_s}", name: 'cn', extension: "html")
  puts "%-15s: %3d: %s" % ['create_n', n, tmp]
end
