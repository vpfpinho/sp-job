#
# Auto generated by sp-job.
#
# Using template file <%= @logrotated[:template][:uri] %>
#
<%= @config.prefix %>/var/log/<%= @logrotated[:service][:name] %>/*.log {
        weekly
        missingok
        rotate 15
        copytruncate
        compress
        delaycompress
        notifempty
        create <%= @logrotated[:service][:permissions] || '0664' %> <%= @logrotated[:service][:user] %> <%= @logrotated[:service][:group] %>
        sharedscripts
        postrotate
            [ -f <%= @config.prefix %>/var/run/<%= @logrotated[:service][:name] %>.pid ] && kill -USR1 `cat <%= @config.prefix %>/var/run/<%= @logrotated[:service][:name] %>.pid`
        endscript
}
